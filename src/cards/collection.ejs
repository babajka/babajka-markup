<div class="size-<%= locals.size %>">
  <div class="collection <% if (locals.isDarkTheme) { %>theme-dark<% } %>" style="background-color: <%= locals.backgroundColor %>;">
    <% if (!['square-m', 'square-s'].includes(locals.size)) { %>
      <div class="collection__cover-wrapper">
        <img
          class="collection__cover"
          src="<%= imagesPath %>/mock/covers/<% if(locals.size === 'm'){ %>collection-1<% } else{ %>collection-2<% } %>.png"
          alt="Вокладка артыкула"
        />
      </div>
    <% } %>
    <div class="collection__content">
      <div class="collection__content-top">
        <div class="collection__collection">
          <%= locals.partNumber %>  частка цыклу
          <div class="collection__collection-name"><%= locals.collectionName %></div>
        </div>
        <img
          class="collection__aux-image"
          src="<%= imagesPath %>/mock/persons/mickiewicz.png"
          alt="Вокладка калекцыі"
          title="Вокладка калекцыі"
        />
      </div>
      <div class="collection__content-bottom">
        <div class="collection__title"><%= locals.title %></div>
        <div class="collection__author"><%= locals.author %></div>
      </div>
    </div>
  </div>
</div>
